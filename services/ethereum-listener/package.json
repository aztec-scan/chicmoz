{
  "name": "@chicmoz/ethereum-listener",
  "version": "1.0.0",
  "description": "Listen to Ethereum events and send them to the message bus",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "license": "UNLICENSED",
  "dependencies": {
    "@aztec/aztec.js": "0.58.0",
    "@aztec/l1-artifacts": "0.58.0",
    "@chicmoz-pkg/logger-server": "workspace:^",
    "@chicmoz-pkg/message-bus": "workspace:^",
    "@chicmoz-pkg/message-registry": "workspace:^",
    "@chicmoz-pkg/types": "workspace:^",
    "exponential-backoff": "3.1.1",
    "viem": "2.21.36"
  },
  "devDependencies": {
    "@types/node": "20.5.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "37.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "15.0.0 || 16.0.0 ",
    "eslint-plugin-promise": "6.0.0",
    "typescript": "5.2.2"
  },
  "scripts": {
    "prebuild": "rm -rf build; mkdir build",
    "build": "yarn tsc",
    "predev": "yarn build",
    "dev": "yarn node build/index.js",
    "start": "yarn node --unhandled-rejections=strict --enable-source-maps build/index.js",
    "lint": "yarn run lint-base --ext .ts .",
    "lint-base": "yarn run g:lint"
