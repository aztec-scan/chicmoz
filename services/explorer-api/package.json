{
  "name": "@chicmoz/explorer-api",
  "description": "Store and serve aztec blockchain data",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "dependencies": {
    "@anatine/zod-openapi": "2.2.6",
    "@aztec/aztec.js": "0.55.1",
    "@aztec/circuits.js": "0.55.1",
    "@aztec/protocol-contracts": "0.55.1",
    "@chicmoz-pkg/error-middleware": "workspace:^",
    "@chicmoz-pkg/logger-server": "workspace:^",
    "@chicmoz-pkg/message-bus": "workspace:^",
    "@chicmoz-pkg/message-registry": "workspace:^",
    "@chicmoz-pkg/types": "workspace:^",
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "drizzle-orm": "0.33.0",
    "exponential-backoff": "3.1.1",
    "express": "4.18.2",
    "express-async-handler": "1.2.0",
    "express-http-proxy": "2.0.0",
    "helmet": "7.0.0",
    "morgan": "1.10.0",
    "pg": "8.11.3",
    "redis": "4.6.13",
    "ts-jest": "29.1.1",
    "uuid": "10.0.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/auto-bind": "2.1.0",
    "@types/body-parser": "1.19.5",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/express-http-proxy": "1.6.6",
    "@types/jest": "29.5.11",
    "@types/morgan": "1.9.4",
    "@types/node": "20.5.0",
    "@types/pg": "8.11.8",
    "@types/redis": "4.0.11",
    "@types/supertest": "6.0.2",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "drizzle-kit": "0.24.2",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "37.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "15.0.0 || 16.0.0 ",
    "eslint-plugin-promise": "6.0.0",
    "jest": "29.7.0",
    "supertest": "6.3.3",
    "typescript": "5.2.2"
  },
  "scripts": {
    "prebuild": "rm -rf build; mkdir build",
    "build": "yarn tsc",
    "postbuild": "ln -s ../public build/public",
    "predev": "yarn build",
    "dev": "yarn node build/src/index.js",
    "generate": "yarn build && drizzle-kit generate",
    "migrate": "yarn node build/scripts/migrate.js",
    "start": "yarn node --unhandled-rejections=strict --enable-source-maps build/src/index.js",
    "lint": "yarn run lint-base --ext .ts .",
    "lint-base": "yarn run g:lint",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)"
  },
  "jest": {
    "rootDir": "src",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "type": "module"
}
